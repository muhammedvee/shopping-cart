<section>
    <div class="d-flex flex-wrap justify-content-center">
        {{#each products}}
        <div class="col-md-3 m-3 card container" style="width: 18rem; float: left; background-color: #FFF8DC
;">
            <img src={{this.image}} class="card-img-top" alt="product image" style="height: 232px;
    width: 190px;">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
        {{/each}}
    </div>
</section>

